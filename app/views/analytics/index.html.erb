<%= javascript_include_tag "http://www.google.com/jsapi", "chartkick" %>
<%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" %>

<h1>Analytics</h1>
<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#home">Events</a></li>
  <li><a data-toggle="tab" href="#menu1">Visits</a></li>
</ul>
<div class="tab-content">
  <div id="home" class="tab-pane fade in active">
    <h3>Total Events by Name</h3>
    <%= pie_chart @events.group(:name).count %>
  </div>
  <div id="menu1" class="tab-pane fade">
    <h3>Visits</h3>
    <%= line_chart @visits.group_by_day(:started_at, format: "%B %d, %Y").count %>
  </div>
</div>
