<%= simple_form_for block do |f| %>
  <div class="form-group">
    <%= f.input :title, label: t(:title),
                input_html: { class: 'form-control', required: true,
                              autofocus: true } %>
  </div>

  <%= f.button :submit, t(:save), class: 'btn btn-default' %>
<% end %>
