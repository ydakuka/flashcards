<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Название</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @blocks.each do |block| %>
    <% cache block do %>
      <tr class="table table-hover table-condensed">
        <td><%= block.title %></td>
        <td><%= check_current_block(block) %></td>
        <td><%= link_to 'Редактировать', edit_block_path(block) %></td>
        <td><%= link_to 'Удалить', block, method: :delete,
                        data: { confirm: 'Удалить колоду?' } %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
